<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dz3CapTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textTitleColorDz3</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Dz3NumberStyle">
        <item name="android:textColor">@color/numberColorDz3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>

    <style name="Dz3TitleStyle">
        <item name="android:textColor">@color/textTitleColorDz3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/monda_regular</item>
    </style>

    <style name="Dz3DataStyle">
        <item name="android:textColor">@color/textDataColorDz3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>
</resources>