<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/dz0Button"
                android:text="@string/dz0"
                style="@style/AllDzStyle"/>

        <Button
                android:id="@+id/dz1Button"
                style="@style/AllDzStyle"
                android:text="@string/dz1"/>

        <Button
                android:id="@+id/dz2part1Button"
                style="@style/AllDzStyle"
                android:text="@string/dz2"/>

        <Button
                android:id="@+id/dz2part2Button"
                style="@style/AllDzStyle"
                android:text="@string/dz2_2"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/dz3Button"
                style="@style/AllDzStyle"
                android:text="@string/dz3"/>
       
         <Button
                android:id="@+id/dz4Button"
                style="@style/AllDzStyle"
                android:text="@string/dz4"/>
      
        <Button
                android:id="@+id/dz5part1Button"
                style="@style/AllDzStyle"
                android:text="@string/dz5_1"/>

        <Button
                android:id="@+id/dz5part2Button"
                style="@style/AllDzStyle"
                android:text="@string/dz5_2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dz6Button"
            style="@style/AllDzStyle"
            android:text="@string/dz6"/>

        <Button
            android:id="@+id/dz8Button"
            style="@style/AllDzStyle"
            android:text="@string/dz8"/>
      
        <Button
            android:id="@+id/dz9Button"
            style="@style/AllDzStyle"
            android:text="@string/dz9"/>

    </LinearLayout>

</LinearLayout>