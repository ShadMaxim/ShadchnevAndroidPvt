<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@android:color/black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:text="Name:"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/numberColorDz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Age:"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/numberColorDz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Url:"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/numberColorDz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:background="@android:color/white"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="20dp"
            android:layout_width="2dp"
            android:layout_height="190dp">

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:id="@+id/nameEditProfileEditText"
                android:hint="Name:"
                android:textSize="30sp"
                android:textColorHint="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:inputType="text"
                android:background="@color/loginEditText"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/ageEditProfileEditText"
                android:hint="Age:"
                android:textSize="30sp"
                android:textColorHint="@android:color/white"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:maxLines="2"
                android:background="@color/loginEditText"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/urlEditProfileEditText"
                android:hint="Url:"
                android:textSize="30sp"
                android:textColorHint="@android:color/white"
                android:inputType="textUri"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/loginEditText"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/saveEditProfileButton"
                android:text="SAVE"
                android:background="@color/numberColorDz3"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:layout_marginBottom="50dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>