<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
  
    <style name="Name_pass">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:background">@color/loginEditText</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="LogIn_CreateAcc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
      
    <style name="AllDzStyle">
        <item name="android:textColor">@color/allDzTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/alldz_button_selector</item>
    </style>

    <style name="Dz3CapTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textTitleColorDz3</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Dz3NumberStyle">
        <item name="android:textColor">@color/numberColorDz3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Dz3TitleStyle">
        <item name="android:textColor">@color/textTitleColorDz3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Dz3DStyle">
        <item name="android:textColor">@color/textDataColorDz3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
